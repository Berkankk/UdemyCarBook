@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Özellik Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Özellik güncelleme işlemlerini bu sayfadan yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="FeatureID" />
                            <div class="form-group">
                                <label for="exampleInputModel">Özellik Adı </label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Özellik Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

