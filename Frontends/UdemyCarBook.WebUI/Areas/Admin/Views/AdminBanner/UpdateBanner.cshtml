@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Öne Çıkan Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Öne çıkan güncelleme işlemlerini bu sayfadan yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="BannerID" />
                            <div class="form-group">
                                <label for="exampleInputModel">Marka Adı </label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Öne Çıkan Girişi Yapınız">
                            </div>
                                 <div class="form-group">
                                <label for="exampleInputModel">Marka Adı </label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Marka Adı </label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklaması Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Marka Adı </label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Video Url Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Öne Çıkanı Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

