@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Öne Çıkan Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Öne Çıkan ile ilgili ekleme, silme, güncelleme, arama ve listeleme gibi işlemleri bu sayfa üzerinden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Video Açıklma</th>
                                        <th>Video Url</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                   
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.VideoDescription</td>
                                            <td>@item.VideoUrl</td>
                                            <td><a href="/AdminBanner/DeleteBanner/@item.BannerID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminBanner/UpdateBanner/@item.BannerID" class="btn btn-outline-primary">Güncelle</a></td>
                                            <td><a href="/BannerList/BannerDetail/@item.BannerID" class="btn btn-outline-dark">Detaylar</a></td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminBanner/CreateBanner/" class="btn btn-outline-succes">Öne Çıkan Girişi</a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

